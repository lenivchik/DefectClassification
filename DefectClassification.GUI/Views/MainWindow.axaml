<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DefectClassification.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:model="using:AvaloniaControls.Models"

        x:Class="DefectClassification.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/ntu.ico"
        Title="Классификация Дефектов"
        Width="700" Height="800"
        FontFamily="Segoe UI,Arial,sans-serif">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- File Selection Section -->
            <Border Grid.Row="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Выбор файла" 
                               FontWeight="Bold" 
                               FontSize="14"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                                 Text="{Binding FilePath}" 
                                 Watermark="Путь к Excel файлу..."/>

                        <Button Grid.Column="2" 
                                Content="Обзор..." 
                                Command="{Binding SelectFileCommand}" 
                                Width="100"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Mode Selection Section -->
            <Border Grid.Row="2" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Режим работы" 
                               FontWeight="Bold" 
                               FontSize="14"/>

                    <!-- Static Mode -->
                    <Border Grid.Row="2" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <RadioButton Grid.Row="0"
                                         Content="Статический (единая толщина стенки колонны)" 
                                         IsChecked="{Binding IsStaticMode}"/>

                            <!-- Static Mode Settings -->
                            <Border Grid.Row="1" 
                                    BorderBrush="#D0D0D0" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Padding="8"
                                    Margin="25,0,0,0"
                                    IsVisible="{Binding IsStaticMode}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                               Text="Толщина стенки (мм)" 
                                               FontWeight="SemiBold" 
                                               />

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                        <NumericUpDown Value="{Binding LambdaValue}" 
                                                       Minimum="0.1" 
                                                       Increment="0.5"
                                                       FormatString="F1"
                                                       Width="150"
                                                       IsEnabled="{Binding IsStaticMode}"/>
                                        <TextBlock Text="мм" 
                                                   VerticalAlignment="Center" 
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Dynamic Mode -->
                                        <Border Grid.Row="4" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <RadioButton Content="Динамический (толщина стенки колонны для каждой трубки)" 
                                         IsChecked="{Binding IsDynamicMode}"
                                         Grid.Row="0"/>			
                                    <Border Grid.Row="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="8"
                    Margin="25,0,0,0"
                    IsVisible="{Binding IsDynamicMode}"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Конфигурация трубок" 
                               FontWeight="SemiBold" 
                               />

                    <!-- Add Tube Controls -->
                    <Border Grid.Row="2" 
                            BorderBrush="#D0D0D0" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="№ трубки:" 
                                       VerticalAlignment="Center"/>

                            <NumericUpDown Grid.Column="2" 
                                           Value="{Binding NewTubeNumber}"
                                           Minimum="1"
                                           Maximum="10000"
                                           Increment="1"
                                           FormatString="F0"
                                           />

                            <TextBlock Grid.Column="4" 
                                       Text="Толщина (мм):" 
                                       VerticalAlignment="Center"/>

                            <NumericUpDown Grid.Column="6" 
                                           Value="{Binding NewWallThickness}"
                                           Minimum="0.1"
                                           Maximum="1000"
                                           Increment="0.5"
                                           FormatString="F1"
                                          />

                            <Button Grid.Column="8" 
                                    Content="Добавить"
                                    Command="{Binding AddTubeCommand}"
                                    Width="100"/>
                        </Grid>
                    </Border>

                    <!-- Tube List DataGrid -->
                    <DataGrid Grid.Row="4"
                              ItemsSource="{Binding TubeConfigurations}"
                              SelectedItem="{Binding SelectedTubeConfiguration}"
                              AutoGenerateColumns="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              GridLinesVisibility="All"
                              BorderThickness="1"
                              BorderBrush="#D0D0D0"
                              Height="150"
                              IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ Трубки" 
                                                Binding="{Binding TubeNumber}" 
                                                Width="*"
                                                IsReadOnly="True"/>
    <DataGridTemplateColumn Header="Толщина стенки (мм)" 
                                                    Width="*"
                                                    SortMemberPath="WallThickness">
                                <!-- Display Template (Read-Only View) -->
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding WallThickness}"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,20,0"
                                                  />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <!-- Editing Template (NumericUpDown) -->
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <NumericUpDown Value="{Binding WallThickness, Mode=TwoWay}"
                                                       Minimum="0.1"
                                                       Maximum="1000"
                                                       Increment="0.5"
                                                       FormatString="F1"
                                                   VerticalAlignment="Center"
                                                       BorderThickness="0"
                                                       Margin="10,0,20,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                       

                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Tube Management Buttons -->
                    <StackPanel Grid.Row="6" 
                                Orientation="Horizontal" 
                                Spacing="10">
                        <Button Content="Удалить выбранную"
                                Command="{Binding RemoveTubeCommand}"
                                Width="150"/>
                        <Button Content="Очистить все"
                                Command="{Binding ClearAllTubesCommand}"
                                Width="150"/>
                        <TextBlock Text="{Binding TubeConfigurations.Count, StringFormat='Всего трубок: {0}'}"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

                            
                        </Grid>


                    </Border>
                </Grid>
            </Border>

            <!-- Options Section -->
            <Border Grid.Row="6" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Настройки" 
                               FontWeight="Bold" 
                               FontSize="14"/>

                    <CheckBox Grid.Row="2" 
                              Content="Создать резервную копию перед обработкой" 
                              IsChecked="{Binding CreateBackup}"/>
                </Grid>
            </Border>

            <!-- Process Button -->


            <!-- Progress Section with Color-Coded Status -->
<Border Grid.Row="8" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Clear/Export buttons -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Журнал событий" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                                Content="🗑️ Очистить"
                                Command="{Binding ClearLogsCommand}"
                                IsEnabled="{Binding HasLogs}"
                                Width="100"
                                Height="30"/>

                        <Button Grid.Column="4"
                                Content="💾 Экспорт"
                                Command="{Binding ExportLogsCommand}"
                                IsEnabled="{Binding HasLogs}"
                                Width="100"
                                Height="30"/>
                    </Grid>

                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="2" 
                                 Value="{Binding ProgressValue}" 
                                 Minimum="0" 
                                 Maximum="100" 
                                 Height="25"
                                 IsVisible="{Binding IsProcessing}"/>

                    <!-- Scrollable Log History -->
                    <ScrollViewer Grid.Row="4"
                                  Name="LogScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  BorderThickness="1"
                                  BorderBrush="#D0D0D0"
                                  Background="#F9F9F9"
                                  AllowAutoHide="True">
                        <ItemsControl ItemsSource="{Binding LogEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4"
                                            BorderThickness="0,0,0,1"
                                            BorderBrush="#E0E0E0"
                                            Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Timestamp -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding TimeStamp}"
                                                       Foreground="#808080"
                                                       FontFamily="Consolas,Courier New,monospace"
                                                       FontSize="11"
                                                       VerticalAlignment="Top"/>

                                            <!-- Message -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Message}"
                                                       Foreground="{Binding Color}"
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Current Status (Last Message Highlighted) -->
                    <Border Grid.Row="6"
                            Background="#F0F0F0"
                            BorderThickness="1"
                            BorderBrush="#D0D0D0"
                            CornerRadius="3"
                            Padding="10">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="{Binding StatusMessageBrush}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   FontWeight="SemiBold"/> 
                    </Border>
                </Grid>
            </Border>
                        <Grid Grid.Row="10">

				<Button
                    Content="Обработать файл"   
                    Command="{Binding ProcessFileCommand}"
                    IsEnabled="{Binding CanProcess}"
                    FontSize="14"
                    Padding="5"
                    Margin="5"
                    />

                <Button 
                    Content="📂 Открыть файл"
                    Command="{Binding OpenFileCommand}"
                    IsEnabled="{Binding IsDone}"
                    Padding="5"
                    Margin="5"
                    HorizontalAlignment="Right"
                    />

            </Grid>

          


        </Grid>
    </ScrollViewer>
</Window>
